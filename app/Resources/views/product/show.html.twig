{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product</h1>

    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
			<tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.category.name }}</td>
            </tr>
			<tr>
                <th>Material</th>
                <td>{{ product.quantity }} {{ product.material.name }}</td>
            </tr>
			
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('product_index') }}">Back to the list</a>
        </li>
		{% if is_granted('ROLE_USER') %}{#IS_AUTHENTICATED_REMEMBERED#}
			<li>
				<input type="submit" value="Add to cart">
			</li>			
		{% endif %}
		{% if is_granted('ROLE_ADMIN') %}
			<li>
				<a href="{{ path('product_edit', { 'id': product.id }) }}">Edit</a>
			</li>
			<li>
				{{ form_start(delete_form) }}
					<input type="submit" value="Delete">
				{{ form_end(delete_form) }}
			</li>
		{% endif %}
        
    </ul>
{% endblock %}
